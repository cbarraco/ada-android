<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ada" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/HomeAssistant</item>
        <item name="colorPrimaryVariant">@color/Black</item>
        <item name="colorOnPrimary">@color/Black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/HomeAssistant</item>
        <item name="colorSecondaryVariant">@color/Black</item>
        <item name="colorOnSecondary">@color/Black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">#F2000000</item>
        <item name="android:textColor">#ffffff</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
    </style>

    <style name="Theme.Ada.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ada.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>